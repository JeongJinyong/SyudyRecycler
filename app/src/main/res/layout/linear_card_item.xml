<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#0092a9"
    android:layout_margin="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/linear_card_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            tools:srcCompat="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/linear_card_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            android:layout_toEndOf="@id/linear_card_img"
            android:layout_alignTop="@id/linear_card_img"
            android:textColor="#000"
            android:textStyle="bold"
            tools:text="정진용"/>

        <TextView
            android:id="@+id/linear_card_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:ellipsize="marquee"
            android:layout_toEndOf="@id/linear_card_img"
            android:layout_alignBottom="@id/linear_card_img"
            tools:text="지금 상태는 치킨이 먹고싶음"
            android:textColor="#000"
            android:singleLine="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>